                <Label
                    Grid.Row="5"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalTextAlignment="Start"
                    Text="Purchase Date Auto-Renewal Date"
                    TextColor="{StaticResource Gray4}"
                    VerticalTextAlignment="Center" />

                <!--  BoxView Section  -->
                <BoxView
                    Grid.Row="6"
                    BackgroundColor="{StaticResource Gray3}"
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand" />
                <Grid
                    Grid.Row="7"
                    ColumnDefinitions="Auto,*"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <Label
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalTextAlignment="Start"
                        Text="1st - 28th"
                        TextColor="LightGray"
                        VerticalTextAlignment="Center" />
